<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@null"
        android:text="test"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_des"
        app:layout_constraintTop_toTopOf="@+id/tv_name_des"/>

    <TextView
        android:id="@+id/tv_pwd_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        app:layout_constraintTop_toBottomOf="@id/tv_name_des"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_des"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textColor="@color/colorPrimary"
        android:text="111"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/tv_pwd_des"
        app:layout_constraintLeft_toRightOf="@id/tv_pwd_des"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pwd_des"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="登录"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>